<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Carbon Calculator</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
   <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.12.1/datatables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
    <link href="~/AlertifyJS/css/alertify.css" rel="stylesheet" />
    <link href="~/AlertifyJS/css/themes/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="/css/home.css" />
    @*<link href="~/font-awesome/css/all.css" rel="stylesheet" />*@
<style>
    body {
        /*background-image: url('/assets/img/backgroundhome.png');*/
        background-image: url('/assets/img/backgroundhomev2.jpg');
        background-position: center;
        /*background-repeat: no-repeat;*/
        background-size: cover;
        margin-bottom: 120px;
        min-height: 400px;
        clear: both;
    }
</style>

    <!-- disable right click in browser -->
    <script>
        window.oncontextmenu = function () {
            return false;
        }
        $(document).keydown(function (event) {
            if (event.keyCode == 123) {
                return false;
            }
            else if ((event.ctrlKey && event.shiftKey && event.keyCode == 73) || (event.ctrlKey && event.shiftKey && event.keyCode == 74)) {
                return false;
            }
        });
    </script>
</head>
<body>

    <partial name="_header" />
    <div style="font-family: TW Cen MT;">
        <partial name="_userbarhome" />
        @*menu informasi di bawah userbar*@
        <div class="d-flex justify-content-end align-items-center" style="margin-right: 160px;font-size: 28px;">
            <a class="menu1" asp-controller="Home" asp-action="BackgroundInfo" style="margin: 0px 40px;">Informasi Latar Belakang</a>
            <a class="menu1" asp-controller="Home" asp-action="Help">Informasi Proses</a>
        </div>
    </div>

    <div class="container">
        <main role="main">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-warning">
                    <strong>Error ! </strong> @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span>&times;</span>
                    </button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <partial name="_footer" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/font-awesome/js/all.js"></script>
    @*<script src="~/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.12.1/datatables.min.js"></script>
    <script src="~/AlertifyJS/alertify.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
