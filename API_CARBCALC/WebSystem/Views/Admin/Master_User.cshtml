@section scripts{


    <script type="text/javascript">
        var UrlAdminTools = '@Url.Action("GetListUser", "Admin")';
        var url = '@Url.Action("Details", "Admin")'


        $(document).ready(function () {
            //$('div[id="nav-rumah"]').on('shown.bs.tab', function (e) {
            //    $.fn.dataTable.tables({ visible: true, api: true }).columns.adjust();
            //});

            $('#asdasd').DataTable({
                order: [0, 'asc'],
                fixedHeader: true,
                scrollY: true,
                ajax: {
                    url: UrlAdminTools,
                    type: 'GET',
                    dataType: 'json',
                    dataSrc: ''
                },
                //columnDefs: [
                //    { 'targets': [0], 'visible': true, 'searchable': false },
                //    { 'targets': [1], 'visible': true, 'searchable': false }
                //],
                columnDefs: [
                    { 'targets': [0], 'width': '150px' },
                    { 'targets': [1], 'width': '220px' },
                    { 'targets': [2], 'width': '130px' }
                ],
                responsive: true,
                columns: [                    
                    { data: 'name' },
                    { data: 'company' },
                    { data: 'regional' },
                    { data: 'zona' },
                    { data: 'isAdmin',
                              render: function (data, type, row, meta)
                              {
                                  if (row.isAdmin==1)
                                  {
                                      return "Super Admin";
                                  }

                                  if (row.isAdmin==2)
                                  {
                                      return "Admin Regional";
                                  }

                                    if (row.isAdmin == 3) 
                                    {
                                        return "Admin Zona";
                                    }

                                    if (row.isAdmin == 4) 
                                    {
                                        return "Admin Field";
                                    }

                                    if ((row.isAdmin == 5) || (row.isAdmin == 0) || (row.isAdmin == null))
                                    {
                                        return "Staff";
                                    }


                                    
                              }
                     },
                    {
                        data: 'id',
                        render: function (data, type, row, meta) 
                        {
                            return '<a class="btn btn-light" style="margin-right:2px;" href="' + row.encLink + '"><i class="fa fa-pencil"></i></a>' +
                                '<a class="btn btn-light" style="margin-right:2px;" href="' + row.encLink_Edit + '" ><i class="fa fa-eye"></i></a>' +
                                '<a class="btn btn-light" style="margin-right:2px;" onclick="Delete(' + row.userID + ')" ><i class="fa fa-trash"></i></a>'

                            //return '<a class="btn btn-light" style="margin-right:5px;" href="/Admin/Master_User_Edit/' + row.userID + '"><i class="fa fa-pencil"></i></a>' +
                            //    '<a class="btn btn-light" style="margin-right:5px;" href="/Admin/Master_User_Details/' + row.userID + '" ><i class="fa fa-eye"></i></a>' +
                            //    '<a class="btn btn-light" style="margin-right:5px;" onclick="Delete(' + row.userID + ')" ><i class="fa fa-trash"></i></a>' + row.encLink

                        }
                    }

                    
                ],
            });
        });

        $(function () {
        var successMessage = '@TempData["SuccessMessage"]'
        if (successMessage != '')
            alertify.success(successMessage);
        });

        function Delete(id) {
            alertify.confirm('Carbon Calculator', 'Hapus data ?', function () {
                window.location.href = '@Url.Action("Delete_User", "Admin")/' + id;
            }, null)
        }

        function showInPopup(id) {
            window.location.href = '@Url.Action("Details", "Admin")/' + id;
        }
    </script>
}