@model WebSystem.Models.Tree

@{
    ViewData["Title"] = "Edit";
}

<style>
    .span-calc {
        font-size: 20px;
        font-weight: bold;
    }

    .label-calc {
        font-size: 20px;
    }

    .input-label {
        background: rgba(0, 0, 0, 0);
        border: none;
        text-align: center;
    }
</style>

<div class="tab-content" id="nav-tabContent">

    @*serapan karbon*@
    <div class="tab-pane fade show active" id="nav-serapan" role="tabpanel" aria-labelledby="nav-serapan-tab"></div>


    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div id="variabel">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Nama Tanaman</label>
                                 <input asp-for="TreeId" class="form-control" type="hidden"  />
                                <input asp-for="TreeName" class="form-control" placeholder="Input here" />
                                <span asp-validation-for="TreeName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Serapan Karbon (kg/pohon/tahun)</label>
                                <input asp-for="CarbonAbs" class="form-control" />
                                <span asp-validation-for="CarbonAbs" class="text-danger"></span>
                            </div>
                        </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Tree Image</label>
                        @*<label asp-for="TreeImage" class="control-label"></label>*@
                        <div class="custom-file">
                            <input asp-for="TreeImage" class="custom-file-input" id="customFile">
                            <label class="custom-file-label" for="customFile">@ViewBag.img</label>
                        </div>
                        <span asp-validation-for="TreeImage" class="text-danger"></span>
                    </div>
                </div>


                    </div>
            
                        <div class="form-group">
                            <div class="col text-center">
                                <input class="btn btn-primary" type="submit" value="Update" asp-action="Update_Tree" />
                    <a class="btn btn-light" asp-action="Master_Tree">Kembali</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}
