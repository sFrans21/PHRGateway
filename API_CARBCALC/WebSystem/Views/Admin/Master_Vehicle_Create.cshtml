@model TblVehicle

@{
    ViewData["Title"] = "Tambah Master Kendaraan";
}

<style>
    .span-calc {
        font-size: 20px;
        font-weight: bold;
    }
    .label-calc {
        font-size: 20px;
    }
</style>

<div class="tab-content" id="nav-tabContent">

    <div class="tab-pane fade show active" id="nav-serapan" role="tabpanel" aria-labelledby="nav-serapan-tab"></div>
    <div class="row" style="margin-top: 50px">
        <div class="col-md-12">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div id="variabel">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Kendaraan</label>
                                <input asp-for="VehicleName" class="form-control" placeholder="Input here" />
                                <span asp-validation-for="VehicleName" class="text-danger"></span>

                            </div>
                        </div>                        

                        <div class="col-md-6">
                            <div class="form-group">
                                 <label>Gambar Kendaraan</label>
                                @*<label asp-for="TreeImage" class="control-label"></label>*@
                                <div class="custom-file">
                                    <input asp-for="VehicleImage" class="custom-file-input" id="customFile">
                                    <label class="custom-file-label" for="customFile">Choose file</label>
                                </div>
                                <span asp-validation-for="VehicleImage" class="text-danger"></span>
                                                               
                            </div>
                         </div>

                         <div class="col-md-6">
                            <div class="form-group">
                               
                            </div>
                        </div>
                        @*<div class="col-md-6">
                            <div class="form-group">
                                <label>Tree Image</label>
                                <input asp-for="TreeImage" class="form-control" type="file" />
                                <span asp-validation-for="TreeImage" class="text-danger"></span>

                            </div>
                        </div>*@

                       @*<div class="col-md-6">  
                            <div class="form-group">  
                            <label> Tree Image</label>
                                    <input asp-for="TreeImage" class="form-control" id="customFile">
                            <span asp-validation-for="TreeImage" class="text-danger"></span>  
                        </div>  
                    </div> *@ 
                </div>  
                    <div class="form-group">
                        <div class="col text-center">
                            <input class="btn btn-primary" id="submit" type="submit" value="Simpan" asp-action="Save_Vehicle" />
                            <a class="btn btn-light" asp-action="Master_Vehicle">Kembali</a>
                        </div>
                    </div>
                </div>
                
            </form>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}