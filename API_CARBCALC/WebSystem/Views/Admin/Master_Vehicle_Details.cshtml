@model WebSystem.Models.TblVehicle

@{
    ViewData["Title"] = "Kendaraan Detail";
}

<style>
    .span-calc {
        font-size: 20px;
        font-weight: bold;
    }

    .label-calc {
        font-size: 20px;
    }

    .input-label {
        background: rgba(0, 0, 0, 0);
        border: none;
        text-align: center;
    }
</style>


<form asp-action="Konfirmasi" method="post">
    <div id="variabel">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Kendaraan</label>                 
                    <input asp-for="VehicleName" class="form-control" disabled/>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label>Gambar</label>
                    <input asp-for="Img" class="form-control" disabled/>
                </div>
            </div>


        </div>
        

        <div class="form-group">
            <div class="col text-center">                
                <a class="btn btn-primary" asp-action="Master_Vehicle">Kembali</a>
            </div>
        </div>
    </div>                    
                        
                        
 </form>

