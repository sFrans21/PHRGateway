@model WebSystem.Models.TblFuel
@{
    ViewData["Title"] = "Edit";
}

<style>
    .span-calc {
        font-size: 20px;
        font-weight: bold;
    }

    .label-calc {
        font-size: 20px;
    }

    .input-label {
        background: rgba(0, 0, 0, 0);
        border: none;
        text-align: center;
    }
</style>

<div class="tab-content" id="nav-tabContent">

    <div class="tab-pane fade show active" id="nav-serapan" role="tabpanel" aria-labelledby="nav-serapan-tab"></div>


    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div id="variabel">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input asp-for="FuelId" class="form-control" type="hidden" />
                        <label>Bahan Bakar</label>
                        <input asp-for="FuelName" class="form-control" />
                        <span asp-validation-for="FuelName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>CO2/KG</label>
                        @*<label asp-for="TreeImage" class="control-label"></label>*@
                        <div class="custom-file">
                            <input asp-for="Co2_KG" class="form-control" />
                        </div>
                        <span asp-validation-for="Co2_KG" class="text-danger"></span>
                    </div>
                </div>

                @*<div class="col-md-6">
                    <div class="form-group">
                        
                    </div>
                </div>*@


            </div>

            <div class="form-group">
                <div class="col text-center">
                    <input class="btn btn-primary" type="submit" value="Update" asp-action="Update_VehicleFuel" />
                    <a class="btn btn-light" asp-action="Master_VehicleFuel">Kembali</a>
                </div>
            </div>
        </div>
    </form>
</div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}
