@model VwMasterVehicleFormula

@{
    ViewData["Title"] = "Tambah Master Formula Kendaraan";
}

<style>
    .span-calc {
        font-size: 20px;
        font-weight: bold;
    }
    .label-calc {
        font-size: 20px;
    }
</style>

<div class="tab-content" id="nav-tabContent">

    <div class="tab-pane fade show active" id="nav-serapan" role="tabpanel" aria-labelledby="nav-serapan-tab"></div>
    <div class="row" style="margin-top: 50px">
        <div class="col-md-12">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div id="variabel">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Kendaraan</label>
                                <select asp-for="VehicleId" class="form-control" asp-items="@ViewBag.Vehicle"></select>
                                <input asp-for="VehicleId" class="form-control" hidden/>

                            </div>
                        </div>                        

                        <div class="col-md-6">
                            <div class="form-group">
                                 <label>Jenis Transportasi @*<a data-toggle="modal" data-target="#JenisTransportHelp" href="#"><i class="fa fa-question-circle"></i></a>*@</label>
                                    <select asp-for="TransportGroupid" class="form-control" asp-items="@ViewBag.Transporttasi"></select>
                                    <input asp-for="TransportGroupid" class="form-control" hidden />
                                                               
                            </div>
                         </div>

                         <div class="col-md-6">
                            <div class="form-group">
                                <label>Bahan Bakar @*<a data-toggle="modal" data-target="#FuelHelp" href="#"><i class="fa fa-question-circle"></i></a>*@</label>
                                    <select asp-for="FuelId" class="form-control" asp-items="@ViewBag.Fuel"></select>
                                    <input asp-for="FuelId" class="form-control" hidden />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                               <label>Jumlah Penumpang </label>
                               <input asp-for="TransportCapacity" class="form-control" placeholder="Input here" min="0"/>
                               <span asp-validation-for="TransportCapacity" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                               <label>KM/Liter </label>
                               <input asp-for="TransportKMperLiter" class="form-control" placeholder="Input here" min="0"/>
                               <span asp-validation-for="TransportKMperLiter" class="text-danger"></span>
                            </div>
                        </div>
                   
                </div>  
                    <div class="form-group">
                        <div class="col text-center">
                            <input class="btn btn-primary" id="submit" type="submit" value="Simpan" asp-action="Save_VehicleFormula" />
                            <a class="btn btn-light" asp-action="Master_VehicleFormula">Kembali</a>
                        </div>
                    </div>
                </div>
                
            </form>
        </div>
    </div>
</div>

