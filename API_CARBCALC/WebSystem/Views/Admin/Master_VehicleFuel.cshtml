
@{
    ViewData["Title"] = "Master Bahan Bakar Kendaraan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    a.hidelink  {
        cursor: pointer;
        color: #0069BA;
    }
</style>
    
<link href="~/bootstrap-datepicker/css/bootstrap-datepicker.css" rel="stylesheet" />

<div class="text-center">    
    <h3>Master Bahan Bakar Kendaraan</h3>
</div>


<div class="tab-content" id="nav-tabContent">
    
    @*serapan karbon*@
    <div class="tab-pane fade show active" id="nav-serapan" role="tabpanel" aria-labelledby="nav-serapan-tab">
        <div class="pt-4">
            <a class="btn btn-success mb-3" asp-controller="Admin" asp-action="Create_VehicleFuel"><i class="fa fa-plus"></i> Tambah</a>
            <table class="table table-striped table-bordered" id="admin">
                <thead>
                    <tr>
                        <th>                            
                            Bahan Bakar
                        </th>
                        
                        <th>
                            CO2/KG
                        </th>
                        
                        <th>Action </th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(function () {
            $("a.hidelink").each(function (index, element) {
                var href = $(this).attr("href");
                $(this).attr("hiddenhref", href);
                $(this).removeAttr("href");
            });
            $("a.hidelink").click(function () {
                url = $(this).attr("hiddenhref");
                window.open(url, '_self');
            })
        });</script>

    <script type="text/javascript">
        var UrlAdminTools = '@Url.Action("GetVehicleFuelList", "Admin")';
        var url = '@Url.Action("Details", "Admin")'


        $(document).ready(function () {
            //$('div[id="nav-rumah"]').on('shown.bs.tab', function (e) {
            //    $.fn.dataTable.tables({ visible: true, api: true }).columns.adjust();
            //});

            $('table.table').dataTable({
                order:[0,'asc'],
                ajax: {
                    url: UrlAdminTools,
                    type: 'GET',
                    dataType: 'json',
                    dataSrc: ''
                },
                columnDefs: [
                    { 'targets': [0], 'visible': true, 'searchable': false },
                    { 'targets': [1], 'visible': true, 'searchable': false },
                    { 'targets': [2], 'width': '130px' },
                ],
                responsive: true,
                columns: [
                    { data: 'fuelName' },//1    
                    { 
                        data: 'co2_KG'
                    },//3
                    {
                        data: 'fuelId',
                        render: function (data, type, row, meta) {
                            return '<a class="btn btn-light" style="margin-right:5px;" href="/Admin/Master_VehicleFuel_Edit/' + row.fuelId + '"><i class="fa fa-pencil"></i></a>' +
                                '<a class="btn btn-light" style="margin-right:5px;" href="/Admin/Master_VehicleFuel_Details/' + row.fuelId + '" ><i class="fa fa-eye"></i></a>' +
                                '<a class="btn btn-light" style="margin-right:5px;" onclick="Delete(' + row.fuelId + ')" ><i class="fa fa-trash"></i></a>';
                                //'<a class="btn btn-light" style="margin-right:5px;" href="/Admin/Delete_VehicleFuel/' + row.fuelId + '" ><i class="fa fa-trash"></i></a>'
                                //+ '<a class="btn btn-light" style="margin-right:5px;" href="/Admin/Delete_Vehicle1/' + row.vehicleId + '" ><i class="fa fa-trash"></i></a>'
                                //'<a class="btn btn-light" style="margin-right:5px;" href="/Admin/Delete_Vehicle/' + row.vehicleId + '" ><i class="fa fa-trash"></i></a>'

                        }
                    }

                    
                ],
            });
        });

        $(function () {
        var successMessage = '@TempData["SuccessMessage"]'
        if (successMessage != '')
            alertify.success(successMessage);
        });

        function Delete(id) {
            alertify.confirm('Carbon Calculator', 'Hapus data ?', function () {
                window.location.href = '@Url.Action("Delete_VehicleFuel", "Admin")/' + id;
            }, null)
        }

        function showInPopup(id) {
            window.location.href = '@Url.Action("Details", "Admin")/' + id;
        }
    </script>
}